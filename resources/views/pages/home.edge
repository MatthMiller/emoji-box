            {{ csrfField() }}

					<button class="hatch-button">
                Hatch an Emoji Egg!
					</button>
        </form>

        {{-- usar o @if e @else para ver se tem emojis --}}
        {{-- Se n√£o tiver, mostrar mensagem que n√£o tem --}}
        <div class="emoji-list-container">
            <p class="quantity">
                Quantity of Emojis: {{ emojisLength }}
            </p>
            @each(emoji in emojis)
                <li class="single-emoji-item">
                    <div class="left-side">
                        <div class="emoji">
                            {{ emoji.emoji }}
                        </div>
                        <p>
                            {{ emoji.name }}
                        </p>
                    </div>

                    <div class="right-side">
                        <form>
                            <button>
                                üìù
                            </button>
                        </form>
                        <form action="{{ route('emoji.delete', [emoji.id],  { formAction: 'delete' }) }}" method="post">
                            {{ csrfField() }}
                            <button>
                                ‚ùå
                            </button>
                        </form>
                    </div>
                </li>
            @end
        </div>
    </body>
